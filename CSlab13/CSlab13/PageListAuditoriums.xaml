<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSlab13.PageListAuditoriums" Title="Аудитории">
    <StackLayout Padding="10">
        <ListView x:Name="ListAuditoriums" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View >
                            <Label Text="{Binding Name}" 
                                   FontSize="Medium" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"/>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Frame BackgroundColor="#c7c5c5" 
               Margin="0,10,0,0" 
               Padding="10, 5, 10,5"
               CornerRadius="10">
            <Button Text="Добавить аудиторию" Clicked="CreateAuditorium" TextColor="DimGray" FontSize="15"/>
        </Frame>
    </StackLayout>
</ContentPage>